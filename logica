<ul class="ranking-list">
    <li class="ranking-item">
        <div class="rank">1</div>
        <div class="ranking-name">Maria Silva</div>
        <div class="ranking-points">2,450</div>
    </li>
    <li class="ranking-item">
        <div class="rank">2</div>
        <div class="ranking-name">João Santos</div>
        <div class="ranking-points">1,980</div>
    </li>
    <li class="ranking-item">
        <div class="rank">3</div>
        <div class="ranking-name">Você</div>
        <div class="ranking-points">1,250</div>
    </li>
</ul>

<script>
    const ranking = [
        {  name: "Maria Silva", points: 2450 },
        {  name: "João Santos", points: 1980 },
        {  name: "Você", points: 1250 }
    ];

    ranking.sort((a, b) => b.points - a.points);

    document.querySelector('.ranking-list').innerHTML = ranking.map((item,index) => `
        <li class="ranking-item">
            <div class="rank">${index+1}</div>
            <div class="ranking-name">${item.name}</div>
            <div class="ranking-points">${item.points.toLocaleString()}</div>
        </li>
    `).join('');
</script>